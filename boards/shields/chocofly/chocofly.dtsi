#include <physical_layouts.dtsi>

/ {
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";

        keys =
            // Left hand - top to bottom, outer to inner
              <&key_physical_attrs 100 100    0    0  0  0  0>   // outer pinky top
            , <&key_physical_attrs 100 100    0  100  0  0  0>
            , <&key_physical_attrs 100 100    0  200  0  0  0>

            , <&key_physical_attrs 100 100  100   25  0  0  0>
            , <&key_physical_attrs 100 100  100  125  0  0  0>
            , <&key_physical_attrs 100 100  100  225  0  0  0>

            , <&key_physical_attrs 100 100  200   50  0  0  0>
            , <&key_physical_attrs 100 100  200  150  0  0  0>
            , <&key_physical_attrs 100 100  200  250  0  0  0>

            , <&key_physical_attrs 100 100  300   75  0  0  0>
            , <&key_physical_attrs 100 100  300  175  0  0  0>
            , <&key_physical_attrs 100 100  300  275  0  0  0>

            , <&key_physical_attrs 100 100  400  100  0  0  0>
            , <&key_physical_attrs 100 100  400  200  0  0  0>
            , <&key_physical_attrs 100 100  225  375  0  0  0> // thumb cluster left-outer
            , <&key_physical_attrs 100 100  325  400  0  0  0> // thumb cluster left-inner

            // Right hand - mirror X + 500 and flipped column order
            , <&key_physical_attrs 100 100  900    0  0  0  0>
            , <&key_physical_attrs 100 100  900  100  0  0  0>
            , <&key_physical_attrs 100 100  900  200  0  0  0>

            , <&key_physical_attrs 100 100  800   25  0  0  0>
            , <&key_physical_attrs 100 100  800  125  0  0  0>
            , <&key_physical_attrs 100 100  800  225  0  0  0>

            , <&key_physical_attrs 100 100  700   50  0  0  0>
            , <&key_physical_attrs 100 100  700  150  0  0  0>
            , <&key_physical_attrs 100 100  700  250  0  0  0>

            , <&key_physical_attrs 100 100  600   75  0  0  0>
            , <&key_physical_attrs 100 100  600  175  0  0  0>
            , <&key_physical_attrs 100 100  600  275  0  0  0>

            , <&key_physical_attrs 100 100  500  100  0  0  0>
            , <&key_physical_attrs 100 100  500  200  0  0  0>
            , <&key_physical_attrs 100 100  675  375  0  0  0> // thumb cluster right-outer
            , <&key_physical_attrs 100 100  575  400  0  0  0> // thumb cluster right-inner
            ;
    };
};